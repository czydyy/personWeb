# 前端环境变量示例
# 复制此文件为.env.local进行配置

# API后端地址 - 必需
# 开发环境：http://localhost:8000/api
# 生产环境：https://your-api-domain.com/api
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Google Gemini API密钥 - 可选（用于AI聊天功能）
# 如果没有AI功能需求，可以留空
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key-here

# 站点配置
NEXT_PUBLIC_SITE_NAME=Nova Portfolio
NEXT_PUBLIC_SITE_DESCRIPTION=AI赋能的个人作品集网站
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 社交媒体链接（可选）
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/yourusername
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourusername

# 功能开关
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_BLOG=true

# 分析工具（可选）
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# 性能配置
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false
NEXT_PUBLIC_ENABLE_PWA=false

# 开发配置（仅开发环境）
# DEBUG=true
# NEXT_PUBLIC_DEV_MODE=true